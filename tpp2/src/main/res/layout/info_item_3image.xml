<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:background="#fff"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="8dp"
            android:id="@+id/info_item_3image_textview"
            android:textSize="18sp"
            android:textColor="#6e6767"
            android:maxLines="1"
            android:ellipsize="end"
            android:text="陈何的电影作品"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_below="@id/info_item_3image_textview"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@mipmap/load"
                android:id="@+id/info_item_3image_imageview1"
                android:layout_marginRight="2dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="131dp" />
            <ImageView
                android:src="@mipmap/load"
                android:id="@+id/info_item_3image_imageview2"
                android:layout_marginRight="1dp"
                android:layout_marginLeft="1dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="131dp" />
            <ImageView
                android:src="@mipmap/load"
                android:id="@+id/info_item_3image_imageview3"
                android:layout_marginLeft="2dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="131dp" />
        </LinearLayout>

    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="#6e6767"></LinearLayout>
</LinearLayout>