<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff">

        <android.support.design.widget.AppBarLayout
            app:elevation="0dp"
            android:background="#fff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.design.widget.CollapsingToolbarLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:contentScrim="#00000000"
                app:layout_scrollFlags="scroll">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_collapseMode="parallax">

                    <android.support.v4.view.ViewPager
                        android:id="@+id/activity_main_viewpager"
                        android:layout_width="match_parent"
                        android:layout_height="250dp"></android.support.v4.view.ViewPager>

                    <LinearLayout
                        android:id="@+id/activity_main_llpoints"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@id/activity_main_viewpager"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="10dp"
                        android:orientation="horizontal"></LinearLayout>
                </RelativeLayout>
            </android.support.design.widget.CollapsingToolbarLayout>
            <LinearLayout
                app:layout_scrollFlags="scroll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fff"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:background="@drawable/i" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/test111"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="8dp"
                            android:text="热映影片"
                            android:textColor="#f3130808"
                            android:textSize="15sp" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignBottom="@id/test111"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="8dp"
                            android:background="#ffffff"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/activity_main_totaltextview"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="2dp"
                                android:text="全部20部"
                                android:textColor="#6e6767"
                                android:textSize="12sp" />

                            <ImageView
                                android:layout_width="8dp"
                                android:layout_height="8dp"
                                android:background="@mipmap/back" />
                        </LinearLayout>
                    </RelativeLayout>

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/activity_main_recycylerview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="8dp"></android.support.v7.widget.RecyclerView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0.1dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:background="#6e6767"></LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/test222"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="8dp"
                            android:text="即将上映"
                            android:textColor="#f3130808"
                            android:textSize="15sp" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignBottom="@id/test222"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="8dp"
                            android:background="#ffffff"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="2dp"
                                android:text="全部"
                                android:textColor="#6e6767"
                                android:textSize="12sp" />

                            <ImageView
                                android:layout_width="8dp"
                                android:layout_height="8dp"
                                android:background="@mipmap/back" />
                        </LinearLayout>
                    </RelativeLayout>

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/activity_main_hotrecycylerview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"></android.support.v7.widget.RecyclerView>

                </LinearLayout>
            </LinearLayout>

            <RelativeLayout
                android:layout_marginTop="50dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#fff"
                android:elevation="0dp">
                <LinearLayout
                    android:layout_alignParentTop="true"
                    android:layout_width="match_parent"
                    android:layout_height="0.1dp"
                    android:background="#6e6767"></LinearLayout>

                <TextView
                    android:id="@+id/test333"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="8dp"
                    android:text="精选推荐"
                    android:textColor="#f3130808"
                    android:textSize="15sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/test333"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="8dp"
                    android:background="#ffffff"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:layout_marginRight="2dp"
                        android:background="@mipmap/refurbish" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="2dp"
                        android:text="换一换推荐内容"
                        android:textColor="#6e6767"
                        android:textSize="12sp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_alignParentBottom="true"
                    android:layout_width="match_parent"
                    android:layout_height="0.1dp"
                    android:background="#6e6767"></LinearLayout>
            </RelativeLayout>
        </android.support.design.widget.AppBarLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/activity_main_inforecycylerview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"></android.support.v7.widget.RecyclerView>
        <RelativeLayout
            android:id="@+id/edittex_rl"
            app:layout_behavior="@string/behavior_sample_title"
            android:background="#fff"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <EditText
                android:textColorHint="#5d5050"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="60dp"
                android:layout_centerVertical="true"
                android:padding="8dp"
                android:editable="false"
                android:id="@+id/edittex"
                android:background="#f6f2f2"
                android:hint="搜影片、影院、影人"
                android:drawablePadding="5dp"
                android:textSize="13sp"
                android:drawableLeft="@drawable/search3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <LinearLayout
            android:id="@+id/load_ll"
            android:paddingLeft="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:background="#00000000"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <TextView
                android:id="@+id/load_textview"
                android:text="重庆"
                android:textColor="@color/xiala2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:background="@drawable/xiala2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:alpha="0"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
            <ImageView
                android:id="@+id/search_movie"
                android:layout_marginRight="8dp"
                android:background="@drawable/search6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>


    </android.support.design.widget.CoordinatorLayout>

</LinearLayout>